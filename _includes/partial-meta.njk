<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<title>{{ site.title }}</title>
<meta name="description" content="{{ site.description }}"/>
<meta property="og:title" content="{{ site.title }}" />
<meta property="og:description" content="{{ site.description }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ helpers.getProjectURL() | safe }}" />
<meta property="og:image" content="{{ site.thumbnail_url }}" />
<meta property="og:image:alt" content="{{ site.thumbnail_alt }}" />
{% if site.social.fediverse_username %}
<meta name="fediverse:creator" content="{{ site.social.fediverse_username }}" />
{% endif %}
